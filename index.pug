                     form-comp
            .container
               .panel
                  .panel-header
                     .panel-title 
                        h4.s-subtitle Resultados
                  .panel-nav <!-- navigation components: tabs, breadcrumbs or pagination -->
                  .panel-body 
                     #results-table   
                  .panel-footer <!-- action buttons or inputs... -->
   
   script.
      riot.mount('form-comp')
      
      depp.define({
         'ResultsBind': [
            ROOT + 'assets/models/ResultsViewModel.js',
            'ResultsBind.js',
         ]
      })

      depp.require(['ResultsBind'], setupBinding)

      function setupBinding() {
         console.info('binding', Date.now() - _start)

         var tabulatorBind = new ResultsBind()
         tabulatorBind.getViewList('results-table')
      }
